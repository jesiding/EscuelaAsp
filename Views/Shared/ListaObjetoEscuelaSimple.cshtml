@*
    @model List<ObjetoEscuelaBase>
*@
@{
    int cont = 0;
}
<div class="card-header text-right">
    <a class="btn btn-primary" asp-controller=@ViewBag.controller asp-action="Create">Crear registro</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Accion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in @Model)
        {
            cont++;
            <tr>
                <td>@cont</td>
                <td>@m.Id</td>
                <td>@m.Nombre</td>
                <td><a class="btn btn-secondary" asp-area="" asp-controller=@ViewBag.controller
                    asp-action="Editar" asp-route-id="@m.Id">Editar</a>
                    <a class="btn btn-danger" asp-area="" asp-controller=@ViewBag.controller
                    asp-action="Eliminar" asp-route-id="@m.Id">Eliminar</a>
                </td>
            </tr>
        }

    </tbody>
</table>
